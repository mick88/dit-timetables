        <activity
            android:name="com.mick88.dittimetable.screens.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.mick88.dittimetable.UnfoldActivity"
            android:label="@string/title_activity_unfold" >
        </activity>
        <activity
            android:name="com.mick88.dittimetable.screens.EventDetailsActivity"
            android:label="@string/title_activity_event_details"
