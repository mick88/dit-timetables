    package="com.mick88.dittimetable"
    android:installLocation="auto"
    android:versionCode="13"
    android:versionName="2.2" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="com.mick88.dittimetable.TimetableApp">
        <activity
            android:name="com.mick88.dittimetable.screens.TimetableActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" 
            >

            <!-- prevents activity from restarting when orientation changes -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
