<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mick88.dittimetable"
    android:installLocation="auto"
    android:versionCode="11"
    android:versionName="2.0.1" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="com.mick88.dittimetable.TimetableApp">
        <activity
            android:name="screens.TimetableActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" >

            <!-- prevents activity from restarting when orientation changes -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" >
                </action>

                <category android:name="android.intent.category.DEFAULT">
                </category>
                <category android:name="android.intent.category.BROWSABLE" >
                </category>

                <data
                    android:host="www.dit.ie"
                    android:pathPrefix="/timetables/PortalServ"
                    android:scheme="https" >
                </data>
            </intent-filter>
        </activity>
        <activity
            android:name="screens.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" >
        </activity>
        <activity
            android:name="screens.EventDetailsActivity"
            android:label="@string/title_activity_event_details"
            android:parentActivityName="screens.TimetableActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mick88.dittimetable.TimetableActivity" />
        </activity>
    </application>

</manifest>