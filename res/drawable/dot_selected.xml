<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape
            android:dither="true"
            android:shape="oval" >
            <solid android:color="@color/card_shadow" />

            <size
                android:height="@dimen/dot_size"
                android:width="@dimen/dot_size" />
        </shape>
    </item>
    <item android:bottom="@dimen/dot_shadow_offset">
        <shape
            android:dither="true"
            android:shape="oval" >
            <solid android:color="@color/card_selected" />

            <size
                android:height="@dimen/dot_size"
                android:width="@dimen/dot_size" />
        </shape>
    </item>

</layer-list>