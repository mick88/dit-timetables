<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item>
		<shape android:shape="rectangle"
			android:dither="true">

			<corners android:radius="@dimen/card_corner_radius"/>

			<solid android:color="@color/card_shadow_selected" />

		</shape>
	</item>

	<item android:bottom="@dimen/card_shadow_offset">
		<shape android:shape="rectangle"
			android:dither="true">

			<corners android:radius="@dimen/card_corner_radius" />

			<solid android:color="@color/card_selected" />

			<padding android:bottom="@dimen/card_padding"
				android:left="@dimen/card_padding"
				android:right="@dimen/card_padding"
				android:top="@dimen/card_padding" />
		</shape>
	</item>
</layer-list>